<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.chzz.keyboard.demo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ChattingUnresolvedActivity"
            android:label="@string/activity_chatting_unresolved_title"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ChattingResolvedHandleByPlaceholderActivity"
            android:label="@string/activity_chatting_fullscreen_resolved_title"
            android:windowSoftInputMode="adjustUnspecified" />

        <activity
            android:name=".ChattingResolvedActivity"
            android:label="@string/activity_chatting_resolved_title"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ChattingResolvedFragmentActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".TranslucentActivity"
            android:theme="@style/TranslucentFullScreenTheme" />


    </application>


</manifest>
